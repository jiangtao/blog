---
/**
 * TableOfContents Component
 * Displays a table of contents with heading links and scroll highlighting
 * Desktop: Fixed sidebar on right
 * Mobile: Collapsible drawer with toggle button
 */
---

<!-- Mobile Toggle Button -->
<button id="toc-toggle" class="toc-toggle" aria-label="切换目录" data-toc-toggle>
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <line x1="8" y1="6" x2="21" y2="6"></line>
    <line x1="8" y1="12" x2="21" y2="12"></line>
    <line x1="8" y1="18" x2="21" y2="18"></line>
    <line x1="3" y1="6" x2="3.01" y2="6"></line>
    <line x1="3" y1="12" x2="3.01" y2="12"></line>
    <line x1="3" y1="18" x2="3.01" y2="18"></line>
  </svg>
</button>

<!-- TOC Container -->
<aside id="toc-container" class="toc-container" data-toc-container>
  <!-- Drag handle for mobile (bottom sheet) -->
  <div class="toc-drag-handle" data-toc-drag-handle>
    <div class="toc-drag-handle-bar"></div>
  </div>
  <div class="toc-header">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="8" y1="6" x2="21" y2="6"></line>
      <line x1="8" y1="12" x2="21" y2="12"></line>
      <line x1="8" y1="18" x2="21" y2="18"></line>
      <line x1="3" y1="6" x2="3.01" y2="6"></line>
      <line x1="3" y1="12" x2="3.01" y2="12"></line>
      <line x1="3" y1="18" x2="3.01" y2="18"></line>
    </svg>
    <span>目录</span>
    <button class="toc-close" data-toc-close aria-label="关闭">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  <nav id="toc-nav" class="toc-nav">
    <ul class="toc-list" data-toc-list></ul>
  </nav>
</aside>

<!-- Overlay for mobile -->
<div id="toc-overlay" class="toc-overlay" data-toc-overlay></div>

<style>
  /* Mobile Toggle Button */
  .toc-toggle {
    position: fixed;
    bottom: 100px;
    right: 4px;
    z-index: 41;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    background: oklch(var(--color-accent));
    color: oklch(from oklch(var(--color-accent)) l c h / 0.95);
    border: none;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    box-shadow: 0 2px 8px oklch(var(--color-accent) / 0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  }

  .toc-toggle:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px oklch(var(--color-accent) / 0.4);
    background: oklch(from oklch(var(--color-accent)) calc(l + 0.03) c h);
  }

  .toc-toggle:active {
    transform: translateY(0);
  }

  .toc-toggle svg {
    flex-shrink: 0;
  }

  /* Hide toggle on desktop */
  @media (min-width: 1025px) {
    .toc-toggle {
      display: none;
    }
  }

  /* TOC Overlay (mobile) */
  .toc-overlay {
    position: fixed;
    inset: 0;
    background: oklch(var(--color-foreground) / 0.3);
    z-index: 49;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .toc-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* TOC Container */
  .toc-container {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 280px;
    max-width: 85vw;
    background: oklch(var(--color-background));
    border-left: 1px solid oklch(var(--color-muted) / 0.3);
    z-index: 50;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: -4px 0 24px oklch(var(--color-foreground) / 0.1);
  }

  .toc-container.active {
    transform: translateX(0);
  }

  /* Mobile: Bottom sheet style */
  @media (max-width: 1024px) {
    .toc-container {
      top: auto;
      right: 0;
      left: 0;
      bottom: 0;
      width: 100%;
      max-width: 100%;
      max-height: 70vh;
      border-left: none;
      border-right: none;
      /* Distinct border-top for dark mode visibility */
      border-top: 1px solid oklch(var(--color-foreground) / 0.15);
      border-radius: 16px 16px 0 0;
      transform: translateY(100%);
      /* Semi-transparent background matching theme - 97% opacity */
      background: rgb(from var(--color-background) r g b / 0.9);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 -8px 32px oklch(var(--color-foreground) / 0.12);
    }

    .toc-container.active {
      transform: translateY(0);
    }
  }

  /* Desktop: Fixed sidebar style */
  @media (min-width: 1025px) {
    .toc-container {
      top: 50%;
      right: 20px;
      bottom: auto;
      transform: translateY(-50%);
      width: 300px;
      max-height: 70vh;
      border: 1px solid oklch(var(--color-muted) / 0.3);
      border-radius: 8px;
      padding: 16px;
      background: oklch(var(--color-background) / 0.9);
      box-shadow: 0 4px 20px oklch(var(--color-foreground) / 0.08);
      z-index: 40;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .toc-container.hidden {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    .toc-overlay {
      display: none;
    }

    .toc-close {
      display: none;
    }

    .toc-drag-handle {
      display: none;
    }
  }

  /* Hide on mobile when not active */
  @media (max-width: 1024px) {
    .toc-container:not(.active) {
      pointer-events: none;
    }

    /* Drag handle for bottom sheet */
    .toc-drag-handle {
      display: flex;
      justify-content: center;
      padding: 12px 16px 8px;
      cursor: grab;
      touch-action: none;
    }

    .toc-drag-handle:active {
      cursor: grabbing;
    }

    .toc-drag-handle-bar {
      width: 36px;
      height: 4px;
      background: oklch(var(--color-muted) / 0.5);
      border-radius: 2px;
    }

    /* Improve mobile typography - more modern and spacious */
    .toc-header {
      font-size: 16px;
      padding: 16px 20px 16px;
      background: transparent;
      border-bottom: 1px solid oklch(var(--color-muted) / 0.25);
    }

    .toc-nav {
      padding: 16px 12px 24px;
    }

    .toc-link {
      padding: 12px 16px;
      font-size: 14px;
      margin: 2px 4px;
      border-radius: 8px;
      font-weight: 400;
      color: oklch(var(--color-foreground) / 0.85);
      transition: all 0.2s ease;
      position: relative;
    }

    .toc-link::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 3px;
      height: 0;
      background: oklch(var(--color-accent));
      border-radius: 2px;
      transition: height 0.2s ease;
    }

    .toc-link:hover::before,
    .toc-link.active::before {
      height: 16px;
    }

    .toc-link:hover {
      background: oklch(var(--color-muted) / 0.15);
      color: oklch(var(--color-accent));
      transform: translateX(2px);
    }

    .toc-link.active {
      background: oklch(var(--color-accent) / 0.12);
      color: oklch(var(--color-accent));
      font-weight: 500;
      padding-left: 20px;
    }

    /* Better hierarchy on mobile with visual indicators */
    .toc-list .toc-sublist {
      padding-left: 0;
      margin-top: 2px;
      margin-bottom: 2px;
      position: relative;
    }

    .toc-list .toc-sublist::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 1px;
      background: oklch(var(--color-muted) / 0.2);
    }

    .toc-list .toc-sublist .toc-link {
      font-size: 13px;
      padding: 10px 16px 10px 12px;
      text-indent: 22px;
      opacity: 0.9;
    }

    .toc-list .toc-sublist .toc-link::before {
      width: 2px;
      height: 14px;
    }
  }

  /* TOC Header */
  .toc-header {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    font-size: 14px;
    color: oklch(var(--color-accent));
    padding: 16px 16px 12px;
    border-bottom: 1px solid oklch(var(--color-muted) / 0.2);
    flex-shrink: 0;
  }

  @media (min-width: 1025px) {
    .toc-header {
      padding: 0;
      margin-bottom: 12px;
      padding-bottom: 8px;
    }
    .toc-close {
      visibility: hidden;
    }
  }

  /* Close button */
  .toc-close {
    margin-left: auto;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: inherit;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s ease, background 0.2s ease;
    border-radius: 6px;
  }

  .toc-close:hover {
    opacity: 1;
    background: oklch(var(--color-muted) / 0.2);
  }

  .toc-close:active {
    background: oklch(var(--color-muted) / 0.3);
  }

  /* TOC Navigation */
  .toc-nav {
    flex: 1;
    overflow-y: auto;
    padding: 8px 16px 16px;
    font-size: 13px;
  }

  @media (min-width: 1025px) {
    .toc-nav {
      padding: 0;
    }
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-list li {
    margin: 4px 0;
  }

  /* TOC Links */
  .toc-link {
    display: block;
    color: oklch(var(--color-foreground) / 0.8);
    text-decoration: none;
    padding: 8px 12px;
    border-radius: 6px;
    transition: all 0.2s ease;
    line-height: 1.5;
    position: relative;
  }

  .toc-link:hover {
    background: oklch(var(--color-muted) / 0.2);
    color: oklch(var(--color-accent));
    transform: translateX(2px);
  }

  .toc-link.active {
    background: oklch(var(--color-accent) / 0.15);
    color: oklch(var(--color-accent));
    font-weight: 500;
  }

  /* Hierarchy indentation with better visual cues */
  .toc-list .toc-sublist {
    list-style: none;
    padding-left: 0;
    margin-top: 2px;
    margin-bottom: 2px;
    position: relative;
  }

  .toc-list .toc-sublist::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 1px;
    background: oklch(var(--color-muted) / 0.2);
  }

  .toc-list .toc-sublist .toc-link {
    font-size: 12px;
    padding: 6px 12px;
    text-indent: 22px;
    opacity: 0.9;
  }

  .toc-list .toc-sublist .toc-link::before {
    width: 2px;
    height: 12px;
  }

  .toc-list .toc-h4 {
    padding-left: 32px;
    font-size: 12px;
    opacity: 0.85;
  }

  .toc-list .toc-h5,
  .toc-list .toc-h6 {
    padding-left: 44px;
    font-size: 11px;
    opacity: 0.8;
  }

  /* Custom scrollbar */
  .toc-nav::-webkit-scrollbar {
    width: 4px;
  }

  .toc-nav::-webkit-scrollbar-track {
    background: oklch(var(--color-muted) / 0.1);
  }

  .toc-nav::-webkit-scrollbar-thumb {
    background: oklch(var(--color-muted) / 0.3);
    border-radius: 2px;
  }

  .toc-nav::-webkit-scrollbar-thumb:hover {
    background: oklch(var(--color-muted) / 0.5);
  }

  /* Mobile drawer slide-in animation */
  @keyframes slide-in-right {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(0);
    }
  }

  @keyframes slide-up-bottom {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }

  @media (max-width: 1024px) {
    .toc-container.active {
      animation: slide-up-bottom 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
  }

  /* Add subtle pulse animation to toggle button */
  @keyframes pulse-soft {
    0%, 100% {
      box-shadow: 0 2px 8px oklch(var(--color-accent) / 0.3);
    }
    50% {
      box-shadow: 0 2px 12px oklch(var(--color-accent) / 0.5);
    }
  }

  .toc-toggle {
    animation: pulse-soft 3s ease-in-out infinite;
  }

  .toc-toggle:hover {
    animation: none;
  }
</style>

<script is:inline data-astro-rerun>
  (function() {
    'use strict';

    const tocContainer = document.getElementById('toc-container');
    const tocList = document.querySelector('[data-toc-list]');
    const tocToggle = document.querySelector('[data-toc-toggle]');
    const tocOverlay = document.querySelector('[data-toc-overlay]');
    const tocClose = document.querySelector('[data-toc-close]');
    const tocDragHandle = document.querySelector('[data-toc-drag-handle]');

    // Touch gesture state for swipe-to-close
    let touchStartX = 0;
    let touchStartY = 0;
    let isDragging = false;
    let currentTranslate = 0;

    // Initialize TOC
    function initTOC() {
      if (!tocContainer || !tocList) return;

      // Find all headings in the article
      const article = document.getElementById('article');
      if (!article) return;

      // Get all headings and filter out non-content ones
      // Only include h2, h3 (exclude h4, h5, h6)
      const allHeadings = article.querySelectorAll('h2, h3');
      const headings = Array.from(allHeadings).filter(heading => {
        // Skip headings inside certain containers
        const parent = heading.closest('nav, .share-links, .tags, .related-posts, .pagination, [data-pagefind-ignore]');
        return !parent;
      });

      // Hide TOC and toggle if no headings found
      if (headings.length === 0) {
        tocContainer.classList.add('hidden');
        if (tocToggle) tocToggle.style.display = 'none';
        return;
      }

      // Clear existing list
      tocList.innerHTML = '';

      // Build nested TOC structure
      let currentList = tocList;
      let level2List = null;
      let lastLevel = 2; // Start with h2 as base level

      headings.forEach((heading, index) => {
        // Ensure heading has an ID
        if (!heading.id) {
          const text = heading.textContent?.trim() || '';
          const slug = text
            .toLowerCase()
            .replace(/\s+/g, '-')
            .replace(/[^\w\u4e00-\u9fa5-]/g, '')
            .substring(0, 50);
          heading.id = `heading-${index}-${slug}`;
        }

        const headingLevel = parseInt(heading.tagName.charAt(1));

        // Create TOC item
        const li = document.createElement('li');
        const a = document.createElement('a');
        a.href = `#${heading.id}`;
        a.textContent = heading.textContent?.trim() || '';
        a.className = `toc-link toc-${heading.tagName.toLowerCase()}`;
        a.dataset.target = heading.id;

        a.addEventListener('click', (e) => {
          e.preventDefault();
          const target = document.getElementById(heading.id);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            // Close mobile drawer after click
            closeMobileTOC();
          }
        });

        li.appendChild(a);

        // Handle nesting for h3 under h2
        if (headingLevel === 3) {
          // Create nested list for h3 if not exists
          if (!level2List) {
            level2List = document.createElement('ul');
            level2List.className = 'toc-list toc-sublist';
            tocList.appendChild(level2List);
          }
          level2List.appendChild(li);
          lastLevel = 3;
        } else {
          // h2 - add to main list
          tocList.appendChild(li);
          level2List = null;
          lastLevel = 2;
        }
      });

      // Show TOC after initialization
      tocContainer.classList.remove('hidden');

      // Setup mobile toggle
      setupMobileToggle();

      // Highlight active heading on scroll
      setupScrollHighlight(headings);
    }

    // Setup mobile toggle functionality
    function setupMobileToggle() {
      if (!tocToggle || !tocOverlay || !tocClose) return;

      // Open TOC
      tocToggle.addEventListener('click', () => {
        tocContainer.classList.add('active');
        tocOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });

      // Close TOC via close button
      tocClose.addEventListener('click', closeMobileTOC);

      // Close TOC via overlay
      tocOverlay.addEventListener('click', closeMobileTOC);

      // Setup swipe-to-close on mobile
      setupSwipeToClose();
    }

    // Setup swipe-to-close gesture
    function setupSwipeToClose() {
      if (!tocContainer || !tocDragHandle) return;

      // Only enable swipe-to-close on mobile (bottom sheet mode)
      const isMobile = window.innerWidth <= 1024;
      if (!isMobile) return;

      let dragStartY = 0;
      let isDragging = false;
      let currentTranslate = 0;

      tocDragHandle.addEventListener('touchstart', (e) => {
        const touch = e.touches[0];
        dragStartY = touch.clientY;
        isDragging = false;
        currentTranslate = 0;
      }, { passive: true });

      tocContainer.addEventListener('touchmove', (e) => {
        if (!dragStartY) return;

        const touch = e.touches[0];
        const diffY = touch.clientY - dragStartY;

        // Only trigger if swiping down
        if (diffY > 0) {
          isDragging = true;
          currentTranslate = diffY;
          tocContainer.style.transform = `translateY(${currentTranslate}px)`;
        }
      }, { passive: true });

      tocContainer.addEventListener('touchend', () => {
        if (isDragging) {
          // Close if swiped down more than 80px
          if (currentTranslate > 80) {
            closeMobileTOC();
          } else {
            // Snap back
            tocContainer.style.transform = '';
          }
        }
        isDragging = false;
        currentTranslate = 0;
        dragStartY = 0;
      }, { passive: true });
    }

    function closeMobileTOC() {
      tocContainer.classList.remove('active');
      // Reset any inline transform styles
      tocContainer.style.transform = '';
      tocOverlay?.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Setup scroll highlight
    function setupScrollHighlight(headings) {
      let scrollTimeout = null;

      function updateActiveHeading() {
        const scrollY = window.scrollY;
        const headingPositions = Array.from(headings).map(heading => ({
          id: heading.id,
          top: heading.getBoundingClientRect().top + scrollY - 100,
        }));

        // Find current heading
        let currentId = '';
        for (let i = headingPositions.length - 1; i >= 0; i--) {
          if (scrollY >= headingPositions[i].top) {
            currentId = headingPositions[i].id;
            break;
          }
        }

        // Update active state
        document.querySelectorAll('.toc-link').forEach(link => {
          link.classList.toggle('active', link.dataset.target === currentId);
        });
      }

      function onScroll() {
        if (scrollTimeout) clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(updateActiveHeading, 50);
      }

      window.addEventListener('scroll', onScroll, { passive: true });

      // Initial update
      updateActiveHeading();
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTOC);
    } else {
      initTOC();
    }

    // Reinitialize after page navigation (Astro View Transitions)
    document.addEventListener('astro:after-swap', () => {
      setTimeout(initTOC, 100);
    });
  })();
</script>
